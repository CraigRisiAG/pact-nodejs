{
  "name": "pact-nodejs-workshop",
  "version": "1.0.0",
  "description": "A simple Nodejs + jest project configuring contract tests with PactJS",
  "main": "src/index.js",
  "scripts": {
    "consumer": "node src/consumerService.js",
    "provider": "node src/providerService.js",
    "test:consumer": "jest __tests__/contract/consumer --runInBand",
    "test:provider": "jest __tests__/contract/provider --runInBand --force-exit",
    "publish:contract": "node ./__tests__/helpers/publish.js"
  },
  "keywords": [
    "nodejs",
    "contract-tests",
    "pactjs",
    "pact",
    "tutorial",
    "course",
    "tau"
  ],
  "author": "Rafeala Azevedo/Craig Risi",
  "license": "MIT",
  "devDependencies": {
    "@pact-foundation/pact": "^12.1.0",
    "@pact-foundation/pact-node": "^10.16.0",
    "axios": "^1.13.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "eslint": "^9.39.2",
    "express": "^4.17.1",
    "jest": "^30.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": ["<rootDir>/__tests__/helpers/pactSetup.js"],
    "setupFilesAfterEnv": ["<rootDir>/__tests__/helpers/pactTestWrapper.js"]
  }
}
